# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/all-india-logistics?retryWrites=true&w=majority

# Server Configuration
PORT=8080
NODE_ENV=production

# CORS Configuration (Update with your actual frontend URL)
CORS_ORIGIN=https://your-frontend-domain.com

# JWT Configuration (Generate a strong secret for production)
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
